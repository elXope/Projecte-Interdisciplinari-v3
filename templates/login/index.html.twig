{% extends 'base.html.twig' %}

{# ... #}

{% block body %}

    {% if error %}

        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>

    {% endif %}

    <div class="caixa caixa--gris position-absolute top-50 start-50 translate-middle text-center rounded p-5">
        <form action="{{ path('login') }}" method="post">
            <div class="row pb-2">
                <label for="username" class="col-5 align-self-start text-start"><strong>Email:</strong></label>
                <input type="text" id="username" name="_username" class="col-6 align-self-end" value="{{ last_username }}"/>
           </div> 
           <div class="row pb-2">
                <label for="password" class="col-5 align-self-start text-start"><strong>Password:</strong></label>
                <input type="password" id="password" name="_password" class="col-6 align-self-end"/>
            </div>
            {# If you want to control the URL the user is redirected to on success #}
            <input type="hidden" name="_target_path" value="/centraleta"/>
            <button type="submit" class="btn btn-primary">login</button>
        </form>
    </div>

{% endblock %}
